# Application
APP_ENV=development
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/shorts_automation
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Storage
STORAGE_TYPE=hybrid  # 'local', 's3', 'hybrid'
LOCAL_STORAGE_PATH=./storage
AWS_ACCESS_KEY_ID=your_key
AWS_SECRET_ACCESS_KEY=your_secret
AWS_S3_BUCKET=shorts-automation
AWS_REGION=us-east-1

# AI Services
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4096

# Platform APIs
YOUTUBE_API_KEY=your_youtube_key
APIFY_API_KEY=your_apify_key  # For TikTok/IG/Snap scrapers

# Rate Limiting
MAX_CONCURRENT_DOWNLOADS=5
MAX_CONCURRENT_ANALYSIS=3
RATE_LIMIT_PER_MINUTE=60

# Video Processing
MAX_VIDEO_SIZE_MB=500
SUPPORTED_FORMATS=mp4,webm,mov
TARGET_RESOLUTION=1080x1920
TARGET_FPS=30
OUTPUT_FORMAT=mp4

# Content Moderation
ENABLE_MODERATION=True
AWS_REKOGNITION_ENABLED=False  # Set True if using
MODERATION_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
